<%= form_for(@article) do |f| %>

<input type="text" name="article[title]" placeholder="Enter a title" id="article_title"><br>
<%= f.text_field :author, placeholder: 'Who are you?' %><br>
<%= f.text_area :content, placeholder: 'What is this thicc post about' %><br>
<%= f.file_field :cover_photo %><br>
<%= f.submit 'Publish Article' %>

<% end %>
